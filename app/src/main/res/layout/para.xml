<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@android:color/white"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="50dp"
        android:background="@color/colorPrimary"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="50dp"
            android:gravity="center"
            android:textSize="14pt"
            android:id="@+id/para_number"
            android:textColor="@android:color/white"
            android:text="1"
            android:layout_height="50dp" />
        <TextView
            android:layout_width="50dp"
            android:gravity="center"
            android:id="@+id/para_time"
            android:text="11:22\n12:33"
            android:layout_height="50dp" />
    </LinearLayout>

    <TextView
        android:layout_width="150dp"
        android:layout_margin="2dp"
        android:gravity="center"
        android:textAlignment="center"
        android:id="@+id/para_name"
        android:text="ОАиП"
        android:layout_height="match_parent" />
    <TextView
        android:layout_width="32dp"
        android:layout_margin="2dp"
        android:gravity="center"
        android:textAlignment="center"
        android:id="@+id/para_type"
        android:text="лек."
        android:layout_height="match_parent" />
    <TextView
        android:layout_width="90dp"
        android:layout_margin="2dp"
        android:gravity="center"
        android:textAlignment="center"
        android:id="@+id/para_professor"
        android:text="Петров А. Д."
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#DDDDDD"
        android:orientation="vertical">
        <TextView
            android:layout_width="50dp"
            android:gravity="bottom"
            android:textAlignment="center"
            android:id="@+id/para_auditory"
            android:text="Г-133"
            android:layout_height="50dp" />
        <TextView
            android:layout_width="50dp"
            android:gravity="top"
            android:textAlignment="center"
            android:id="@+id/para_podgr"
            android:text="2 пг."
            android:layout_height="50dp" />
    </LinearLayout>

</LinearLayout>